  <%= link_to "いい嫁 #{post.likes.count}", like_path(post.id), method: :post, class: 'btn btn-warning text-white mx-3', remote: true %>
<% else %>
  <%= link_to "いい嫁 #{post.likes.count}", unlike_path(post.id), method: :delete, class: 'btn btn-warning text-white mx-3', remote: true %>
<% end %>
