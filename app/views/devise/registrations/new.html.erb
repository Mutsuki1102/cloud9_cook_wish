<div class="container">    
  <div class="contents row col-sm-12 col-md-10 col-lg-8 mx-auto mt-5">
    <div class="card col-sm-12 col-md-12 col-lg-8 mx-auto border-warning my-3">
      <div class="row mx-auto my-2">
        <h2>新規登録</h2>
      </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">Nickname</span>
            </div>
            <%= f.text_field :nickname, autofocus: true, maxlength: "6", class:"form-control" %>
          </div>
      
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">E-mail</span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">password</span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">password確認</span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
          
          <div class="row mx-1 my-3 actions">
            <%= f.submit "登録", class:"btn btn-warning btn-lg btn-block text-white" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

