  <div class="container">
    <div class="contents row col-8 mx-auto">
      <%= form_tag("/posts/#{@post.id}", class: "card col-8 mx-auto border-warning my-3", method: :patch, multipart: true) do %>
        <div class="row mx-auto my-2">
          <h3>
            編集する
          </h3>
        </div>
          <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">写真</span>
          </div>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="inputGroupFile01" name="image">
            <label class="custom-file-label" for="inputGroupFile01">ファイルを選択</label>
          </div>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">料理名</span>
          </div>
          <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="title" value="<%= @post.title%>">
        </div>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">決め手</span>
          </div>
          <textarea class="form-control" aria-label="With textarea" name="content"><%= @post.content %></textarea>
        </div>
        <div class="row mx-1 my-3">
          <button type="submit" class="btn btn-warning btn-lg btn-block" value="送信">更新</button>
        </div>
      <% end %>
  </div>
</div>