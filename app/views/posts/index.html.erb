<% @posts.each do |post|%>
  <div class="card col-8 mx-auto border-warning my-3">
    <%= image_tag post.image.thumb.url, :style => "padding-top: 15px" %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %> BY <%= post.user.nickname %></h5>
      <p class="card-text"><%= post.content %></p>
      <%= link_to "詳細", post_path(post.id), method: :get, class: 'btn btn-warning text-white' %>
    </div>
  </div>
<% end %>
